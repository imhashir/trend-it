<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Album List Theme -->
    <style name="AlbumListTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_album_list_item">
        <item name="android:textColor">@color/default_list_text_color</item>
        <item name="android:background">@color/default_list_view_background</item>
    </style>

    <style name="selected_album_list_item">
        <item name="android:textColor">@color/selected_list_text_color</item>
        <item name="android:background">@color/selected_list_view_background</item>
    </style>

</resources>
